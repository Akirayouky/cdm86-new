# CDM86 Platform Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,https://cdm86.com,https://www.cdm86.com

# Database (MongoDB)
MONGODB_URI=mongodb://localhost:27017/cdm86
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cdm86

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=CDM86 <noreply@cdm86.com>

# Referral Configuration
REFERRAL_REWARD_POINTS=100
REFERRAL_CODE_LENGTH=8

# Promotion Configuration
MAX_PROMOTIONS_PER_PAGE=20
PROMOTION_IMAGE_MAX_SIZE=5242880

# Security
BCRYPT_ROUNDS=10
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=15

# PWA Push Notifications (optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:support@cdm86.com